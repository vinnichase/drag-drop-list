{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "airbnb",
        "airbnb/hooks"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module",
        "allowImportExportEverywhere": true
    },
    "plugins": [
        "react"
    ],
    "overrides": [
        {
            "files": [
                "**/*.spec.js",
                "**/*.spec.jsx"
            ],
            "env": {
                "jest": true
            }
        }
    ],
    "rules": {
        "max-len": [
            0
        ],
        "indent": [
            "error",
            4,
            {
                "ignoredNodes": [
                    "JSXElement"
                ]
            }
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quote-props": [
            "error",
            "consistent"
        ],
        "semi": [
            "error",
            "always"
        ],
        "comma-dangle": [
            "error",
            "always-multiline"
        ],
        "arrow-parens": [
            "error",
            "as-needed"
        ],
        "multiline-ternary": [
            "error",
            "always-multiline"
        ],
        "no-confusing-arrow": [
            0
        ],
        "no-use-before-define": [
            0
        ],
        "no-underscore-dangle": [
            0
        ],
        "no-nested-ternary": [
            0
        ],
        "no-case-declarations": [
            0
        ],
        "no-return-assign": [
            0
        ],
        "no-console": [
            0
        ],
        "no-alert": [
            0
        ],
        "global-require": [
            0
        ],
        "no-unused-expressions": [
            0
        ],
        "react/jsx-indent": [
            "error",
            4
        ],
        "react/jsx-indent-props": [
            "error",
            4
        ],
        "jsx-a11y/click-events-have-key-events": [
            0
        ],
        "jsx-a11y/no-static-element-interactions": [
            0
        ],
        "jsx-a11y/media-has-caption": [
            0
        ],
        "react/prop-types": [
            0
        ],
        "react/no-deprecated": [
            0
        ],
        "react/jsx-filename-extension": [
            0
        ],
        "import/no-named-as-default-member": [
            0
        ],
        "import/prefer-default-export": [
            0
        ]
    }
}